{
  "functions": {
    "app/api/workers/enrich-product/route.ts": {
      "maxDuration": 90
    },
    "app/api/webhooks/enrich-product/route.ts": {
      "maxDuration": 30
    },
    "app/api/cron/**/*.ts": {
      "maxDuration": 90
    },
    "app/api/workers/regenerate-product/route.ts": {
      "maxDuration": 300
    }
  },
  "crons": [
    {
      "path": "/api/cron/blog-researcher",
      "schedule": "0 8 * * 1"
    },
    {
      "path": "/api/cron/taya-director",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/enrich-pending",
      "schedule": "0 */4 * * *"
    },
    {
      "path": "/api/cron/auto-process-products",
      "schedule": "*/5 * * * *"
    }
  ]
}
